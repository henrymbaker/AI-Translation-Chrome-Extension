{
  "manifest_version": 3,
  "name": "Word Highlighter",
  "version": "1.0",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/download.jpg",
      "48": "images/download.jpg",
      "128": "images/download.jpg"
    }
  }
}
